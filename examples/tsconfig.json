{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": [
        "es2018"
      ],
      "outDir": "example-dist",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "example-dist/**/*",
      "node_modules/**/*",
      "cdk.out/**/*",
      "examples/**/*"
    ]
  }
    